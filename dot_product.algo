ALGORITHM Function dot_product
VAR
   IR: (v1, v2: vector of IR): real
BEGIN
     Declare ps as real
  ps <- 0
  For (i <- 1 to size(v1))then{
    ps <- ps + v1[i] * v2[i]
  End for
